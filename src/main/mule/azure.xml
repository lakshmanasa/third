http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
http://www.mulesoft.org/schema/mule/tls http://www.mulesoft.org/schema/mule/tls/current/mule-tls.xsd">
	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="fed45812-8bad-4eb1-a817-a169fa5ef569" >
		<http:listener-connection host="0.0.0.0" port="${s.port}" protocol="HTTPS">
			<tls:context >
				<tls:key-store type="jks" path="server-keystore.jks" keyPassword="mulesoft" password="mulesoft" />
			</tls:context>
		</http:listener-connection>
	</http:listener-config>
	<configuration-properties doc:name="Configuration properties" doc:id="7e140c91-639d-4312-b8e6-beb53b82bed3" file="${env}.yaml" />
	<flow name="azureFlow" doc:id="aaccf06f-bcec-4a91-b5e4-e7a0cf4489e2" >
		<http:listener doc:name="Listener" doc:id="9412419a-4af6-4302-b653-32833d2c4ad1" config-ref="HTTP_Listener_config" path="/azure"/>
		<ee:transform doc:name="Transform Message" doc:id="43d21264-8ade-4a4a-bcfe-23104a552161" >
			<ee:message >
				<ee:set-payload ><![CDATA['${message}' ++ '${msg}' ++ " lakshman asa"]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</flow>
</mule>
